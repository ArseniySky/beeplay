    "test": "tap test/*.js"
  },
  "author": "Daijiro Wachi",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^4.1.6",
    "tap": "^5.4.2",
    "uglify": "^0.1.5"
  }
}
