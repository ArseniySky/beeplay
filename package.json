{
  "name": "beeplay",
  "version": "0.0.5",
  "description": "Write A Song In JavaScript",
  "main": "Gruntfile.js",
  "scripts": {
    "build": "npm run browserify && npm run uglify",
    "postbuild": "cp dist/* docs/js",
